        },
        "system": {
          "background": "rgba(32, 44, 51, 0.95)",
          "text": "rgba(233, 237, 239, 0.9)",
          "border": "none"
        }
      },
      "text": {
        "primary": "#e9edef",
        "secondary": "#8696a0",
        "tertiary": "#667781",
        "placeholder": "#8696a0",
