        "thumbHover": "rgba(134, 150, 160, 0.5)"
      },
      "messageStatus": {
        "pending": "#8696a0",
        "sent": "#8696a0",
        "delivered": "#8696a0",
        "read": "#53bdeb"
      }
    },
    
    "light": {
      "name": "Light Theme",
      "backgrounds": {
        "app": "#f0f2f5",
        "sidebar": "#ffffff",
        "sidebarHeader": "#f0f2f5",
        "chatListItem": "#ffffff",
        "chatListItemHover": "#f5f6f6",
        "chatListItemSelected": "#f0f2f5",
        "searchBar": "#f0f2f5",
        "searchBarInput": "#ffffff",
        "chatWindow": "#efeae2",
        "chatWindowPattern": "url('/pattern-light.png')",
        "messageInput": "#f0f2f5",
        "inputField": "#ffffff",
        "dropdown": "#ffffff",
        "modal": "#ffffff",
        "modalOverlay": "rgba(11, 20, 26, 0.5)"
      },
      "messageBubbles": {
        "outgoing": {
          "background": "#d9fdd3",
          "text": "#111b21",
          "timestamp": "#667781",
          "link": "#027eb5",
          "tail": "#d9fdd3"
        },
        "incoming": {
          "background": "#ffffff",
          "text": "#111b21",
          "timestamp": "#667781",
          "link": "#027eb5",
          "tail": "#ffffff",
          "senderName": "#06cf9c"
        },
        "system": {
          "background": "#fdf4c5",
          "text": "#54656f",
          "border": "none"
        }
      },
      "text": {
        "primary": "#111b21",
        "secondary": "#667781",
        "tertiary": "#8696a0",
        "placeholder": "#667781",
        "link": "#027eb5",
        "linkHover": "#0056b3",
        "danger": "#ea0038",
        "success": "#00a884"
      },
      "icons": {
        "default": "#54656f",
        "secondary": "#8696a0",
        "hover": "#111b21",
        "active": "#00a884",
        "send": "#8696a0",
        "sendHover": "#00a884",
        "attachment": "#54656f"
      },
      "borders": {
        "default": "#e9edef",
        "light": "#d1d7db",
        "sidebar": "#e9edef",
        "input": "#e9edef"
      },
      "status": {
        "online": "#25d366",
        "typing": "#00a884"
      },
      "badges": {
        "unread": "#25d366",
        "unreadText": "#ffffff",
        "muted": "#8696a0"
      },
      "scrollbar": {
        "track": "transparent",
        "thumb": "rgba(0, 0, 0, 0.2)",
        "thumbHover": "rgba(0, 0, 0, 0.3)"
      },
      "messageStatus": {
        "pending": "#667781",
        "sent": "#667781",
        "delivered": "#667781",
        "read": "#53bdeb"
      }
    }
  },
  
  "typography": {
    "fontFamily": {
      "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif",
      "monospace": "'SF Mono', 'Fira Code', Consolas, monospace",
      "emoji": "'Apple Color Emoji', 'Segoe UI Emoji', 'Noto Color Emoji', sans-serif"
    },
    "fontSize": {
      "xs": "11px",
      "sm": "12px",
      "smPlus": "13px",
      "base": "14.2px",
      "md": "15px",
      "lg": "17px",
      "xl": "19px",
      "xxl": "24px"
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.2,
      "normal": 1.4,
      "relaxed": 1.6
    },
    "usage": {
      "chatListName": {
        "size": "17px",
        "weight": 400,
        "lineHeight": 1.3
      },
      "chatListPreview": {
        "size": "14px",
        "weight": 400,
        "lineHeight": 1.4
      },
      "chatListTime": {
        "size": "12px",
        "weight": 400
      },
      "messageText": {
        "size": "14.2px",
        "weight": 400,
        "lineHeight": 1.4
      },
      "messageTimestamp": {
        "size": "11px",
        "weight": 400
      },
      "headerTitle": {
        "size": "16px",
        "weight": 500
      },
      "headerSubtitle": {
        "size": "13px",
        "weight": 400
      },
      "inputText": {
        "size": "15px",
        "weight": 400
      }
    }
  },
  
  "layout": {
    "sidebar": {
      "width": "400px",
      "minWidth": "300px",
      "maxWidth": "500px",
      "headerHeight": "59px",
      "searchHeight": "49px"
    },
    "chatWindow": {
      "headerHeight": "59px",
      "inputMinHeight": "62px",
      "inputMaxHeight": "200px"
    },
    "chatListItem": {
      "height": "72px",
      "padding": "10px 15px",
      "avatarSize": "49px",
      "avatarMargin": "15px"
    },
    "messages": {
      "maxWidth": "65%",
      "minWidth": "120px",
      "padding": "6px 7px 8px 9px",
      "borderRadius": "7.5px",
      "tailSize": "8px",
      "gap": "2px",
      "dateGroupGap": "12px"
    },
    "avatar": {
      "xs": "28px",
      "sm": "36px",
      "md": "40px",
      "lg": "49px",
      "xl": "60px",
      "profile": "200px"
    },
    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "24px",
      "xxl": "32px"
    },
    "borderRadius": {
      "sm": "4px",
      "md": "8px",
      "lg": "12px",
      "xl": "16px",
      "full": "9999px"
    }
  },
  
  "components": {
    "avatar": {
      "defaultBackground": "#6a7175",
      "textColor": "#ffffff",
      "border": "none",
      "shadow": "none"
    },
    "searchBar": {
      "height": "35px",
      "borderRadius": "8px",
      "iconSize": "18px",
      "iconPadding": "12px"
    },
    "messageInput": {
      "borderRadius": "8px",
      "padding": "9px 12px",
      "iconSize": "24px",
      "emojiButtonSize": "26px"
    },
    "button": {
      "primary": {
        "background": "#00a884",
        "text": "#ffffff",
        "hoverBackground": "#06cf9c"
      },
      "secondary": {
        "background": "transparent",
        "text": "#00a884",
        "border": "#00a884"
      },
      "danger": {
        "background": "#f15c6d",
        "text": "#ffffff"
      }
    },
    "tooltip": {
      "background": "#3b4a54",
      "text": "#e9edef",
      "borderRadius": "3px",
      "padding": "4px 8px",
      "fontSize": "12px"
    },
    "dropdown": {
      "borderRadius": "3px",
      "shadow": "0 2px 5px rgba(0,0,0,0.26)",
      "itemHeight": "40px",
      "itemPadding": "0 24px"
    },
    "modal": {
      "borderRadius": "3px",
      "shadow": "0 1px 1px rgba(0,0,0,0.13)",
      "padding": "20px"
    },
    "badge": {
      "height": "20px",
      "minWidth": "20px",
      "borderRadius": "10px",
      "fontSize": "12px",
      "padding": "0 5px"
    },
    "callButton": {
      "size": "56px",
      "iconSize": "28px",
      "borderRadius": "50%"
    }
  },
  
  "icons": {
    "sizes": {
      "xs": "14px",
      "sm": "18px",
      "md": "20px",
      "lg": "24px",
      "xl": "28px"
    },
    "strokeWidth": "1.5px",
    "common": [
      "search", "more-vertical", "message-circle", "phone", "video",
      "paperclip", "mic", "smile", "send", "check", "check-check",
      "clock", "image", "file", "x", "arrow-left", "chevron-down",
      "star", "pin", "bell-off", "trash-2", "user", "users", "settings"
    ]
  },
  
  "animations": {
    "duration": {
      "instant": "0ms",
      "fast": "150ms",
      "normal": "200ms",
      "slow": "300ms"
    },
    "easing": {
      "default": "ease-out",
      "smooth": "cubic-bezier(0.4, 0, 0.2, 1)",
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    },
    "typing": {
      "dotSize": "8px",
      "dotSpacing": "4px",
      "animationDuration": "1.4s"
    },
    "messageAppear": {
      "duration": "200ms",
      "translateY": "10px"
    }
  },
  
  "messageStatus": {
    "icons": {
      "pending": {
        "icon": "clock",
        "description": "Message pending"
      },
      "sent": {
        "icon": "check",
        "description": "Message sent"
      },
      "delivered": {
        "icon": "check-check",
        "description": "Message delivered"
      },
      "read": {
        "icon": "check-check",
        "color": "#53bdeb",
        "description": "Message read"
      }
    }
  },
  
  "chatTypes": {
    "individual": {
      "showSenderName": false,
      "avatarShape": "circle"
    },
    "group": {
      "showSenderName": true,
      "avatarShape": "circle",
      "senderNameColors": [
        "#35cd96", "#e542a3", "#00a0f2", "#f9a825",
        "#ff7043", "#ab47bc", "#26a69a", "#ec407a"
      ],
      "maxMembersDisplay": 4
    }
  },
  
  "timestamps": {
    "formats": {
      "messageTime": "h:mm a",
      "chatListToday": "h:mm a",
      "chatListYesterday": "'Yesterday'",
      "chatListThisWeek": "EEE",
      "chatListOlder": "M/d/yy",
      "dateDividerToday": "'Today'",
      "dateDividerYesterday": "'Yesterday'",
      "dateDividerOther": "MMMM d, yyyy"
    }
  },
  
  "sounds": {
    "messageSent": "/sounds/sent.mp3",
    "messageReceived": "/sounds/received.mp3",
    "notification": "/sounds/notification.mp3",
    "callRinging": "/sounds/ringing.mp3",
    "callEnded": "/sounds/call-ended.mp3"
  },
  
  "patterns": {
    "chatBackground": {
      "dark": {
        "opacity": 0.06,
        "color": "#0b141a"
      },
      "light": {
        "opacity": 0.4,
        "color": "#efeae2"
      }
    }
  },
  
  "accessibility": {
    "focusRing": {
      "color": "#00a884",
      "width": "2px",
      "offset": "2px"
    },
    "minimumTouchTarget": "44px",
    "reducedMotion": {
      "disableAnimations": true,
      "disableTransitions": false
    }
  },
  
  "responsive": {
    "breakpoints": {
      "mobile": "768px",
      "tablet": "1024px",
      "desktop": "1280px"
    },
    "mobileSidebar": {
      "width": "100%",
      "headerHeight": "56px"
    }
  },
  
  "zIndex": {
    "sidebar": 100,
    "chatHeader": 200,
    "dropdown": 1000,
    "modal": 1100,
    "modalOverlay": 1050,
    "tooltip": 1200,
    "toast": 1300
  }
}
