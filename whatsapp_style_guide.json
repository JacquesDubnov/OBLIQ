{
  "meta": {
    "name": "WhatsApp Web Style Guide",
    "version": "2025.1",
    "description": "Complete style specifications for WhatsApp Web UI clone",
    "lastUpdated": "2025-01-11"
  },
  
  "themes": {
    "dark": {
      "name": "Dark Theme (Default)",
      "backgrounds": {
        "app": "#111b21",
        "sidebar": "#111b21",
        "sidebarHeader": "#202c33",
        "chatListItem": "#111b21",
        "chatListItemHover": "#202c33",
        "chatListItemSelected": "#2a3942",
        "searchBar": "#202c33",
        "searchBarInput": "#2a3942",
        "chatWindow": "#0b141a",
        "chatWindowPattern": "url('/pattern-dark.png')",
        "messageInput": "#202c33",
        "inputField": "#2a3942",
        "dropdown": "#233138",
        "modal": "#3b4a54",
        "modalOverlay": "rgba(11, 20, 26, 0.85)"
      },
      "messageBubbles": {
