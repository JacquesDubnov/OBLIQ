        "danger": "#f15c6d",
        "success": "#00a884"
      },
      "icons": {
        "default": "#aebac1",
        "secondary": "#8696a0",
        "hover": "#e9edef",
        "active": "#00a884",
        "send": "#8696a0",
        "sendHover": "#00a884",
        "attachment": "#8696a0"
      },
      "borders": {
        "default": "#2a3942",
        "light": "#222d34",
        "sidebar": "#222d34",
        "input": "transparent"
      },
      "status": {
